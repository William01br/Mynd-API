  "paths": {
    "/user/register": {
      "post": {
        "summary": "Create a new user",
        "description": "This route is used to create a new user",
        "tags": ["users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "William Smith",
                    "username": "William",
                    "email": "williamsmith123@gmail.com",
                    "password": "SkY123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid user data: Email must be unique and valid. Furthermore, the password must contain uppercase letters, lowercase letters, numbers and at least 8 characters"
          },
          "201": {
            "description": "Created",
            "Content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Search all users",
        "description": "This route is used to search all users",
        "tags": ["Users"],
